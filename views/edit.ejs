<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/nav.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
    <title>Document</title>
</head>
<body>
<%- include('./nav.ejs')  %>
<div class="card-body">
    <form action="/editar/<%= tabla.id %>" method="POST">
        <div class="form-group">
            <input type="text" class="form-control" name="nombre" placeholder="nuevo nombre..." autofocus value="<%= tabla.nombre %>">
            <div class="form-group">
                <button class="btn btn-success btn-block">Save</button>
            </div>
            <% productos.forEach(item => { %>
                <div>
                    <h1><%= item.nombre %></h1>
                    <form action="/editar/<%= item.id %>" method="post">
                        <input type="hidden" name="listas" value="<%= item.id %>">
                        <button>Eliminar producto</button>
                    </form>

                </div>
                <% }); %>
        </div>
        
        
    </form>
</div>
</body>
</html>

